package practice;

import java.util.Scanner;

class PrintDiamondPattern19 {
	public static void main(String[] args) {
		int n,c,k,space =1;
		Scanner s= new Scanner(System.in);
		System.out.println("Enter number of rows: ");
		n =s.nextInt();
		space =n-1;
		for (k=1;k<=n;k++) {
			for(c=1;c<=space;c++)
				System.out.println(" ");
					space--;
		for(c=1;c<=2*k-1;c++)
			System.out.println("*");
		System.out.println("");
		}
	}
	

}
